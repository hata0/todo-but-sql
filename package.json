{
  "name": "todo-but-sql",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "turbo run lint:eslint",
    "lint:prettier": "prettier --check \"**/*.{js,ts,jsx,tsx,mdx,md}\"",
    "fix": "pnpm fix:eslint && pnpm fix:prettier",
    "fix:eslint": "turbo run fix:eslint",
    "fix:prettier": "prettier --write \"**/*.{js,ts,jsx,tsx,mdx,md}\""
  },
  "devDependencies": {
    "lefthook": "^1.11.2",
    "prettier": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
